---
// Barra lateral izquierda
import HomeIcon from "@/icons/Home.astro";
import SearchIcon from "@/icons/Search.astro";
import LibraryIcon from "@/icons/Library.astro";
import SideMenuItem from "./SideMenuItem.astro";
import SideMenuCardTitle from "./SideMenuCardTitle.astro";

import { playlists } from "@/services/data";
---

<nav class="flex flex-col flex-1 gap-2 overflow-hidden">
  <div class="bg-zinc-900 rounded-lg p-2">
    <ul>
      <SideMenuItem href="/">
        <HomeIcon />
        Inicio
      </SideMenuItem>
      <SideMenuItem href="/#">
        <SearchIcon />
        Buscar
      </SideMenuItem>
    </ul>
  </div>
  <div class="bg-zinc-900 rounded-lg p-2 flex-1">
    <ul>
      <SideMenuItem href="/#">
        <LibraryIcon />
        Tu biblioteca
      </SideMenuItem>
      <div class="mt-4 overflow-y-auto h-[calc(100vh-315px)]">
        {playlists.map((playlist) => <SideMenuCardTitle playlist={playlist} />)}
      </div>
    </ul>
  </div>
</nav>
